<%- include('parts/header' ,{pageTitle:pageTitle}) %> 
<%- include('parts/navbar', { isUser: isUser ,isAdmin:isAdmin }) %>


        <div class="container text-center">
            <h3>Login</h3>
            <form action="/login" method="post">
                <input type="email" name="email" class="form-control mb-2" placeholder="Email" />
                <% let emailError=errors.find(e=> e.path === 'email') %> <% if (emailError) { %>
                        <p class="alert alert-danger">
                            <%= emailError.msg %>
                        </p>
                        <% } %>
                            <input type="password" name="password" class="form-control mb-2" placeholder="Password" />
                            <% let passwordError=errors.find(e=> e.path === 'password') %>
                                <% if (passwordError) { %>
                                    <p class="alert alert-danger">
                                        <%= passwordError.msg %>
                                    </p>
                                    <% } %>
                                        <input type="submit" value="Login" class="btn btn-brown text-white" />
            </form>
            <br />
            <% if (error) { %>
                <p class="alert alert-danger">
                    <%= error %>
                </p>
                <% } %>
                    <div>
                        <p>Don't have an account? <a href="/signup">Sign Up</a></p>
                    </div>
        </div>

        <%- include('parts/footer')%>